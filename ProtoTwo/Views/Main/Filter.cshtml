@model ProtoTwo.Models.Main

<!--Sets the Page Title and Layout Page-->
@{
    ViewBag.Title = "Filter";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="box" style="width: 100%; height: auto; margin: 0px;">
    <h2 style="color: dimgrey; font-family: Momcake; display: inline; float: left">Filter</h2>

    <!--Remove Filter Button. Calls the removeFilter method in MainController-->
    <form id="removeFilter" method="post" action="/Main/removeFilter">
        <button class="font5 rec_submit linkwhite" style="height: 40px; margin: 10px 30px 0px 0px; float: right; display: inline; width: 150px">Remove Filter</button>
    </form>

    <!--Set Filter. Calls the setFilter method in MainController with the contents of the form. -->
    <form method="post" action="/Main/setFilter">
        <!--Set Filter Button-->
        <div class="period" style="padding-right: 20px">
            <button id="setFilter" class="font5 rec_submit linkwhite" style="height: 40px; margin: 10px 30px 0px 0px">Set Filter</button>
        </div>
        <div class="filter_field" style="overflow-y: scroll; display: block; width: 100%">
            <input type="text" name="FirstName" style="width: 365px" placeholder="First Name">
            <input type="text" name="LastName" style="width: 365px" placeholder="Last Name">
            <input type="text" name="Phone" style="width: 220px" placeholder="Phone">
            <input type="text" name="Purpose" style="width: 220px" placeholder="Purpose">
            <input type="text" name="Meeting" style="width: 200px" placeholder="Request To See">

            <input type="text" name="Tag" style="width: 130px" placeholder="Tag">

            <!--Had to use HTMLHelpers for these fields. For easy user access, and because the values have to be in 'DateTime' form.-->
            @Html.EditorFor(model => model.STimeFrom, new { htmlAttributes = new { @style = "width: 200px; padding-right: 10px", @title = "Time Range (Lower)" } })
            @Html.EditorFor(model => model.STimeTo, new { htmlAttributes = new { @style = "width: 200px; padding-right: 10px", @title = "Time Range (Higher)" } })

            @Html.EditorFor(model => model.DateFrom, new { htmlAttributes = new { @style = "width: 200px; padding-right: 10px", @title = "Date Range (Lower)" } })
            @Html.EditorFor(model => model.DateTo, new { htmlAttributes = new { @style = "width: 200px; padding-right: 10px", @title = "Date Range (Higher)" } })
        </div>
    </form>
</div>

